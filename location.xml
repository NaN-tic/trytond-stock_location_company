<tryton>
    <data>
        <record model="ir.ui.view" id="location_view_form">
            <field name="model">stock.location</field>
            <field name="inherit" ref="stock.location_view_form"/>
            <field name="name">location_form</field>
        </record>

        <record model="ir.rule.group" id="rule_group_location_company">
            <field name="name">User in company</field>
            <field name="model" search="[('model', '=', 'stock.location')]"/>
            <field name="global_p" eval="True"/>
        </record>
        <record model="ir.rule" id="rule_group_location_company1">
            <field name="domain" eval="['OR', ('company', 'in', Eval('user', {}).get('companies', [])), ('company', '=', None)]" pyson="1"/>
            <field name="rule_group" ref="rule_group_location_company"/>
        </record>
    </data>
</tryton>
